<openerp>
	<data>
		<record id="view_perhitungan_ppn_xls" model="ir.ui.view">
			<field name="name">Print/Export Perhitungan PPn</field>
			<field name="model">perhitungan.ppn</field>
			<field name="arch" type="xml">
				<form string="Print/Export Perhitungan PPn">
					<group string="Filters">
						<field name="start_date" placeholder="Start Date"/>
						<field name="end_date" placeholder="End Date"/>
						<field name="tax1_id"/>
						<field name="tax2_id"/>
					</group>
					<footer>
						<button icon="gtk-print" name="print_report" string="Print" type="object" class="oe_highlight" context="{'xls':1}"/> or 
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
	
		
		<record id="action_print_perhitungan_ppn" model="ir.actions.act_window">
			<field name="name">Perhitungan PPn</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">perhitungan.ppn</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_perhitungan_ppn_xls"/>
			<field name="target">new</field>
		</record>
		
		
		<menuitem 
			name="Perhitungan PPn"
			sequence="1"
			action="action_print_perhitungan_ppn"
			id="menu_print_perhitungan_ppn"
			icon="STOCK_PRINT"
			parent="account.menu_finance_reporting"
		/>
	</data>
</openerp>