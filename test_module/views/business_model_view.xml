<openerp>
	<data>
<!--	START TICKET TYPE	-->
		<record model="ir.actions.act_window" id="business_model_action">
            <field name="name">Business Model</field>
            <field name="res_model">business.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.ui.view" id="business_model_tree_view">
            <field name="name">business.model.tree</field>
            <field name="model">business.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
		            <field name="date"/>
		            <field name="business_type"/>
			        <field name="type_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="business_model_form_view">
            <field name="name">business.model.form</field>
            <field name="model">business.model</field>
            <field name="arch" type="xml">
                <form>
	            	<sheet>
		            	<group>
		            		<group>
		                    	<field name="name"/>
		                    	<field name="date"/>
		                    	<field name="business_type"/>
			                    <field name="type_id"/>
			                </group>
		                </group>
	            	</sheet>
                </form>
            </field>
        </record>
<!--    END OF TICKET TYPE    -->

<!--    START MENU TICKET TYPE    -->
        <menuitem id="business_model" name="Business Model"
         parent="business_type"/>
        <menuitem id="business_model_data" name="Business Model Data" 
         parent="business_model" action="business_model_action"/>
<!--    END OF MENU TICKET TYPE    	-->
	
	</data>
</openerp>